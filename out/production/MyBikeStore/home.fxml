<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea"
            fx:controller="com.BikeStore.Presentation.ActionComponents.MenuPresentation">
    <top>
        <VBox prefHeight="30.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="Home">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#viewHome" text="Home"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Customers">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#viewAllCustomers" text="All Customers"/>
                                <MenuItem mnemonicParsing="false" onAction="#viewNewCustomer" text="Add Customer"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Show Bikes">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#viewAllCityBikes"
                                          text="Show all City Bikes"/>
                                <MenuItem mnemonicParsing="false" onAction="#viewAllMountainBikes"
                                          text="Show All Mountain Bikes"/>
                                <MenuItem mnemonicParsing="false" onAction="#viewAllElectricBikes"
                                          text="Show All Electric Bikes"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Add Bike">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#viewNewCityBikes" text="New City Bike"/>
                                <MenuItem mnemonicParsing="false" onAction="#viewNewMountainBikes"
                                          text="New Mountain Bike"/>
                                <MenuItem mnemonicParsing="false" onAction="#viewNewElectricBikes"
                                          text="New Electric Bike"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Tasks">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#viewAllTasks" text="Show All Tasks"/>
                                <MenuItem mnemonicParsing="false" onAction="#viewNewReparation" text="New Reparation"/>
                                <MenuItem mnemonicParsing="false" onAction="#viewNewDelivery" text="New Delivery"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Print">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#viewPrintAllTasks" text="Show Print All Tasks"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Import">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#viewImportCustomers" text="Import customers from file"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>

            </children>
        </VBox>
    </top>
    <center>
        <AnchorPane fx:id="content" maxHeight="-1.0" maxWidth="1024.0" prefHeight="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <Label alignment="CENTER" layoutX="14.0" layoutY="25.0" style="&#10;" text="Welcome on the BikeStore Application" textAlignment="CENTER" textFill="#9f9f9f" wrapText="false">
                </Label>
                <Label layoutX="14.0" layoutY="51.0" text="Company ID: 1" />
                <Label layoutX="14.0" layoutY="76.0" text="Chamber Of Commerce Number: 12345678" />
                <Label layoutX="14.0" layoutY="102.0" text="IBAN : NL91 ABNA 0417 1643 00" />
            </children>
        </AnchorPane>
    </center>
</BorderPane>
